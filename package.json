{
  "name": "hexa-book",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "npx nodemon src/index.ts",
    "generate": "npx drizzle-kit generate:sqlite --config=src/adapters/out/drizzle/drizzle.config.ts",
    "migrate:run": "npx drizzle-kit push:sqlite --config=src/adapters/out/drizzle/drizzle.config.ts",
    "migrate:rollback": "drizzle-kit drop --config=src/adapters/out/drizzle/drizzle.config.ts",
    "studio": "npx drizzle-kit studio --config=src/adapters/out/drizzle/drizzle.config.ts"
  },
  "dependencies": {
    "@libsql/client": "^0.4.0-pre.5",
    "@prisma/client": "^5.6.0",
    "better-sqlite3": "^9.2.0",
    "drizzle-orm": "^0.29.1",
    "drizzle-zod": "^0.5.1",
    "express": "^4.18.2",
    "nodemon": "^3.0.2",
    "prisma": "^5.6.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "drizzle-kit": "^0.20.6",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "prisma": {
    "schema": "src/adapters/out/prisma/schema.prisma"
  }
}
